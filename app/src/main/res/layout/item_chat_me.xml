            android:maxEms="18"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_color"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</LinearLayout>